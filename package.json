{
  "name": "base-img-generator",
  "version": "2.8.22",
  "description": "base image generator",
  "main": "scripts/generate-dockerfiles.js",
  "homepage": "https://github.com/resin-io-library/base-images",
  "repository": {
    "type": "git",
    "url": "git@github.com:resin-io-library/base-images.git"
  },
  "private": true,
  "scripts": {
    "lint": "balena-lint -e js scripts/*.js",
    "lint-fix": "balena-lint -e js --fix scripts/*.js",
    "os-arch": "node scripts/generate-dockerfiles.js os-arch",
    "os-arch-lib": "node scripts/generate-bakefiles.js os-arch",
    "os-device": "node scripts/generate-dockerfiles.js os-device",
    "os-device-lib": "node scripts/generate-bakefiles.js os-device",
    "stack-device": "node scripts/generate-dockerfiles.js stack-device",
    "stack-device-lib": "node scripts/generate-bakefiles.js stack-device",
    "stack-arch": "node scripts/generate-dockerfiles.js stack-arch",
    "stack-arch-lib": "node scripts/generate-bakefiles.js stack-arch",
    "stack-device-dockerhub": "node scripts/generate-dockerhub-description.js stack-device",
    "stack-arch-dockerhub": "node scripts/generate-dockerhub-description.js stack-arch",
    "all": "npm run clean && node scripts/generate-dockerfiles.js all",
    "all-lib": "npm run clean-lib && node scripts/generate-bakefiles.js all",
    "all-dockerhub": "npm run clean-dockerhub && node scripts/generate-dockerhub-description.js all",
    "all-workflows": "npm run clean-workflows && node scripts/generate-workflows.js all",
    "clean": "rimraf \"balena-base-images/!(docs)\"",
    "clean-lib": "rimraf library",
    "clean-dockerhub": "rimraf balena-base-images/docs",
    "clean-workflows": "rimraf .github/workflows/bake-*.yml",
    "test": "time -p npm run os-arch && time -p npm run os-arch-lib"
  },
  "author": "Resin Inc. <hello@resin.io>",
  "license": "Apache-2.0",
  "dependencies": {
    "@balena/contrato": "^0.9.2",
    "balena-sdk": "^18.1.4",
    "fs-extra": "^11.1.1",
    "js-yaml": "^4.1.0",
    "lodash": "^4.17.21",
    "require-all": "^3.0.0",
    "rimraf": "^5.0.1"
  },
  "devDependencies": {
    "@balena/lint": "^6.2.2",
    "husky": "^8.0.3",
    "lint-staged": "^14.0.0"
  },
  "engines": {
    "node": "^18.14.0",
    "npm": "^9.4.1"
  },
  "versionist": {
    "publishedAt": "2023-10-17T17:30:42.752Z"
  }
}
